# Development environment configuration for conversation_service
# Service Configuration
CONVERSATION_SERVICE_ENVIRONMENT=development
CONVERSATION_SERVICE_LOGGING_LEVEL=INFO
CONVERSATION_SERVICE_ROOT_PATH=/api/v1

# Database connection
CONVERSATION_SERVICE_DATABASE_URL=postgresql+psycopg://postgres:postgres@supabase_db_kgents:5432/conversation_dev_db

# JWT Configuration (must match auth_service configuration)
CONVERSATION_SERVICE_M2M_JWT_SECRET_KEY=change-me-32-bytes-min
CONVERSATION_SERVICE_M2M_JWT_ALGORITHM=HS256
CONVERSATION_SERVICE_M2M_JWT_ISSUER=http://127.0.0.1:54321/auth/v1
CONVERSATION_SERVICE_M2M_JWT_AUDIENCE=authenticated

CONVERSATION_SERVICE_USER_JWT_SECRET_KEY=change-me-32-bytes-min
CONVERSATION_SERVICE_USER_JWT_ALGORITHM=HS256
CONVERSATION_SERVICE_USER_JWT_ISSUER=http://127.0.0.1:54321/auth/v1
CONVERSATION_SERVICE_USER_JWT_AUDIENCE=authenticated

# External runtimes
LANGFLOW_RUNTIME_URL=https://agent-runtime-0e2d2b7e-7aad-4cd5-a56a-b9c2665ec2c7-218635955003.us-central1.run.app

# CORS
CONVERSATION_SERVICE_CORS_ALLOW_ORIGINS=["*"]

# Auth service (for bootstrap)
AUTH_SERVICE_URL=http://auth_service:8000/api/v1
INITIAL_ADMIN_EMAIL=admin@admin.com
INITIAL_ADMIN_PASSWORD=admin

# M2M credentials (populated by bootstrap)
CONVERSATION_SERVICE_CLIENT_ID=your_client_id_here
CONVERSATION_SERVICE_CLIENT_SECRET=your_client_secret_here
