# Service Configuration
AGENT_MANAGEMENT_SERVICE_ENVIRONMENT=development
AGENT_MANAGEMENT_SERVICE_LOGGING_LEVEL=INFO
AGENT_MANAGEMENT_SERVICE_ROOT_PATH=/api/v1

# Database Configuration (points to the shared Supabase instance)
AGENT_MANAGEMENT_SERVICE_DATABASE_URL=postgresql+psycopg://postgres:postgres@supabase_db_kgents:5432/postgres

# Supabase Auth Proxy Configuration
AGENT_MANAGEMENT_SERVICE_SUPABASE_URL=http://supabase_kong_kgents:8000
AGENT_MANAGEMENT_SERVICE_SUPABASE_ANON_KEY=your_supabase_anon_key
AGENT_MANAGEMENT_SERVICE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Validation Configuration
# This MUST match the secret key from the auth_service
AUTH_SERVICE_JWT_PUBLIC_KEY_OR_SECRET=a_very_strong_and_long_secret_key_for_signing_tokens
AUTH_SERVICE_JWT_ALGORITHM=HS256